{
  "name": "ydant",
  "version": "0.0.0",
  "private": true,
  "keywords": [],
  "license": "ISC",
  "author": "",
  "scripts": {
    "dev": "pnpm --filter examples run dev",
    "build": "pnpm -r run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "typecheck": "pnpm -r --if-present run typecheck",
    "typecheck:examples": "pnpm --filter 'showcase*' run typecheck",
    "typecheck:packages": "pnpm --filter '@ydant/*' run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-istanbul": "^4.0.18",
    "happy-dom": "^20.3.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "oxfmt --write"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt --write"
    ]
  },
  "packageManager": "pnpm@10.22.0"
}
